{
  "annotations": { "list": [] },
  "editable": true,
  "panels": [
    {
      "title": "Tasks Processed/min",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(celery_tasks_total[5m])) * 60", "legendFormat": "Tasks/min" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "title": "Task Duration by Type",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(celery_task_runtime_bucket[5m])) by (le, name))", "legendFormat": "{{name}}" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "title": "Failed Tasks",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(celery_tasks_total{status=\"FAILURE\"}[5m])) * 60", "legendFormat": "Failures/min" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    }
  ],
  "refresh": "30s",
