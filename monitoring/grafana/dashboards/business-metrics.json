{
  "annotations": { "list": [] },
  "editable": true,
  "panels": [
    {
      "title": "Payments / Hour",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(increase(debtflow_payment_total{status=\"completed\"}[1h]))", "legendFormat": "Payments" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
    },
    {
      "title": "Total Collected Today",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(increase(debtflow_payment_amount_total{status=\"completed\"}[24h]))", "legendFormat": "$ Collected" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 }
    },
    {
      "title": "Import Success Rate",
      "type": "gauge",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(debtflow_sftp_import_records_total{status=\"ok\"}) / sum(debtflow_sftp_import_records_total) * 100", "legendFormat": "Success %" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 }
    },
    {
      "title": "Active Accounts by Status",
      "type": "piechart",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "debtflow_active_accounts_gauge", "legendFormat": "{{status}}" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 }
    }
  ],
  "refresh": "5m",
  "schemaVersion": 38,
  "tags": ["debtflow", "business"],
  "time": { "from": "now-24h", "to": "now" },
  "title": "DebtFlow â€” Business Metrics",
  "uid": "debtflow-business-metrics"
}
