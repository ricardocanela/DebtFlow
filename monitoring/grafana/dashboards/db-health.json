{
  "annotations": { "list": [] },
  "editable": true,
  "panels": [
    {
      "title": "Active DB Connections",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "pg_stat_activity_count", "legendFormat": "Active" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
    },
    {
      "title": "Query Duration P95",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(django_db_query_duration_seconds_bucket[5m])) by (le))", "legendFormat": "P95" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 }
    },
    {
      "title": "Cache Hit Ratio",
      "type": "gauge",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "pg_stat_database_blks_hit / (pg_stat_database_blks_hit + pg_stat_database_blks_read) * 100", "legendFormat": "Hit %" }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 }
    }
  ],
  "refresh": "1m",
  "schemaVersion": 38,
  "tags": ["debtflow", "database"],
  "time": { "from": "now-1h", "to": "now" },
  "title": "DebtFlow â€” Database Health",
  "uid": "debtflow-db-health"
}
